//WCFM Marketplace Code Snippet to Hide the Products tab
add_filter( 'wcfmmp_store_tabs', function( $store_tabs, $store_id ) {
	if( isset( $store_tabs['products'] ) ) unset( $store_tabs['products'] );
	return $store_tabs;
}, 50, 2 );
