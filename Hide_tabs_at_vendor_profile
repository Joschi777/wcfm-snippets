//WCFM Marketplace Code Snippet to Hide the Policies tab
add_filter( 'wcfmmp_store_tabs', function( $store_tabs, $store_id ) {
	if( isset( $store_tabs['policies'] ) ) unset( $store_tabs['policies'] );
	return $store_tabs;
}, 50, 2 );

